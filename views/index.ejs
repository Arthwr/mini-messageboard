<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Message Board</title>
  </head>
  <body>
    <section class="board">
      <div>
        <h1><%= title %></h1>
        <ul>
          <% messages.forEach(message => { %>
          <li>
            <span class="user"><b><%= message.username %></b></span>
            <span class="timestamp">at <%= message.sent_at %></span>
            <p class="message"><%= message.text %></p>
          </li>
          <% }) %>
        </ul>
      </div>
      <%- include("partials/errors.ejs") %>
      <div><%- include("./partials/form") %></div>
    </section>
  </body>
</html>
